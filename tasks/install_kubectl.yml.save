- name: Add Google apt Repository
  shell: echo "deb https://apt.kubernetes.io/ kubernetes-$(lsb_release -cs) main" | sudo tee -a /etc/apt/sources.list.d/kubernetes.list
  become: yes
  args:
     executable: /bin/bash
     warn: false

- name: Update APT Sources
  apt:
    update_cache: yes

- name: Install Packages from APT
  apt: 
    pkg:
     - kubeadm
     - kubelet
     - kubectl


- name: Download and Install minikube
  shell: curl -Lo minikube https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64 && chmod +x minikube
  become: yes
  args:
     executable: /bin/bash
     warn: false

- name: Download and Install minikube
  shell: sudo mkdir -p /usr/local/bin/ && sudo install minikube /usr/local/bin/
  become: yes
  args:
     executable: /bin/bash
     warn: false
